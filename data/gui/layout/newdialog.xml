<?xml version="1.0"?>
<layout name="NewDialog">
	<table cols="3" rows="3"><!-- center window -->
		<colsize col="1" fixed="500"/>
		<rowsize row="1" fixed="160"/>
		<window col="1" row="1" name="window" title="New map">
			<table cols="1" rows="3">
				<colsize col="0" relative="1"/>
				<rowsize row="2" fixed="30"/>
				<rowsize row="1" fixed="10"/>
				<table col="0" row="0" cols="2" rows="4" name="t1">
					<rowsize row="0" fixed="5"/>
					<rowsize row="3" relative="2"/>
					<colsize col="0" fixed="100"/>
					<text col="0" row="1" caption="Width:"/>
					<edit col="1" tabindex="0" row="1" name="width" text="128"/>
					<text col="0" row="2" caption="Height:" font="text.font"/>
					<edit col="1" tabindex="0" row="2" name="height" text="128"/>
					<text col="1" row="3" caption="Sizes should be power of 2 and at least 16"/>
				</table>
				<table col="0" row="2" cols="2" rows="1">
					<button col="0" row="0" name="ok" theme="antButton" caption="Ok"/>
					<button col="1" row="0" name="cancel" theme="antButton" caption="Cancel"/>
				</table>
			</table>
		</window>
	</table>
</layout>

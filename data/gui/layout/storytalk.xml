<?xml version="1.0"?>
<layout name="TellTale">
	<table cols="3" rows="3"><!-- center window -->
		<colsize col="1" fixed="450"/>
		<rowsize row="0" relative="5"/>
		<rowsize row="1" fixed="240"/>
		<window col="1" row="1" name="window" title="Playername" theme2="story">
			<table cols="3" rows="2">
				<colsize col="0" fixed="66"/>
				<colsize col="1" relative="1"/>
				<colsize col="2" fixed="66"/>
				<rowsize row="0" relative="1"/>
				<rowsize row="1" fixed="30"/>
				<button col="0" row="0" name="face" theme="antButton" caption-image="data/gui/portraits/wesnoth1.png"/>
				<text col="1" row="0" name="text" caption="'You awaken...\nThe surrounding is unfamiliar to you.\nYou wonder what happened and\nhow you have come here.'"/>
				<button col="0" row="1" name="back" theme="antButton" caption="<<"/>
				<button col="2" row="1" name="forward" theme="antButton" caption=">>"/>
				<button col="1" row="1" name="ok" theme="antButton" caption="Ok"/>
			</table>
		</window>
	</table>
</layout>
